{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "lib": ["ES2022"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "declaration": false,
        "sourceMap": false
    },
    "include": ["scripts/**/*.ts"],
    "exclude": ["node_modules"]
}
