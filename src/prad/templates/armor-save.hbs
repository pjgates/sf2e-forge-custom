<div class="prad-chat-card prad-armor-save prad-degree-{{degreeClass}}">
    <header class="prad-header">
        <h4 class="prad-title">
            <i class="fas fa-shield-alt"></i>
            {{localize "sf2e-forge-custom.prad.armorSave"}}
        </h4>
    </header>

    <div class="prad-context">
        <span class="prad-npc-name">{{npcName}}</span>
        attacks
        <span class="prad-pc-name">{{rollerName}}</span>
        with <strong>{{weaponName}}</strong>
    </div>

    <div class="prad-roll-details">
        <div class="prad-roll-row">
            <span class="prad-label">Armor Save</span>
            <span class="prad-formula">
                <span class="prad-die prad-die-{{dieClass}}">{{dieResult}}</span>
                + {{modifier}} = <strong>{{total}}</strong>
            </span>
        </div>
        <div class="prad-roll-row">
            <span class="prad-label">{{localize "sf2e-forge-custom.prad.attackDC"}}</span>
            <span class="prad-dc-value">{{dc}}</span>
        </div>
    </div>

    <div class="prad-result prad-result-{{degreeClass}}">
        <div class="prad-player-result">
            <span class="prad-result-label">{{rollerName}}:</span>
            <span class="prad-degree">{{playerDegreeLabel}}</span>
        </div>
        <div class="prad-npc-result">
            <span class="prad-result-label">{{npcName}}:</span>
            <span class="prad-effect">{{npcEffectLabel}}</span>
        </div>
    </div>
</div>
