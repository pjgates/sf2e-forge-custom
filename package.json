{
    "name": "sf2e-forge-custom",
    "version": "0.1.0",
    "description": "Custom rules module for Starfinder 2e in Foundry VTT",
    "type": "module",
    "scripts": {
        "convert": "tsx scripts/convert-vault.ts",
        "compile-packs": "tsx scripts/compile-packs.ts",
        "build": "yarn convert && yarn compile-packs && vite build",
        "sync": "git submodule update --init --remote && yarn convert --include-unpublished && yarn compile-packs && npx vite build",
        "watch": "vite build --watch",
        "test": "vitest run",
        "lint": "eslint src/",
        "clean": "rm -rf dist packs/the-forge-entities packs/the-forge-bestiary",
        "link": "echo 'Symlink to your Foundry modules folder: ln -s $(pwd) <foundryData>/Data/modules/sf2e-forge-custom'"
    },
    "devDependencies": {
        "@foundryvtt/foundryvtt-cli": "^3.0.3",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "commander": "^14.0.3",
        "eslint": "^9.39.2",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-boundaries": "^5.4.0",
        "fvtt-types": "github:League-of-Foundry-Developers/foundry-vtt-types#main",
        "gray-matter": "^4.0.3",
        "marked": "^17.0.1",
        "sass": "~1.83.0",
        "tsx": "^4.21.0",
        "typescript": "~5.7.0",
        "vite": "~6.1.0",
        "vite-plugin-static-copy": "~2.3.0",
        "vitest": "^4.0.18"
    },
    "engines": {
        "node": ">=20"
    }
}
